<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipegenie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.recipeGenie">
        <activity
            android:name="com.example.recipegenie.UpdateRecipe"
            android:exported="false" />
        <activity
            android:name="com.example.recipegenie.RecipePage"
            android:exported="false" />
        <activity
            android:name="com.example.recipegenie.NewRecipeForm"
            android:exported="false" />
        <activity
            android:name="com.example.recipegenie.FavoritesList"
            android:exported="false" />
        <activity
            android:name="com.example.recipegenie.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>